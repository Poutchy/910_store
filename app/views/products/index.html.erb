<div class="products-header">
  <h1>Products</h1>
  <%= link_to "New product", new_product_path, class: "new-product-button" if authenticated? %>
</div>

<div id="products">
  <% @products.each do |product| %>
  <%= link_to product_path(product), class: "product-card" do %>
    <% if product.featured_image.attached? %>
      <div class="product-card-image">
        <%= image_tag product.featured_image, alt: product.name %>
      </div>
    <% else %>
      <div class="product-card-placeholder">
        <span>No Image</span>
      </div>
    <% end %>

    <div class="product-card-info">
      <div class="product-card-title"><%= product.name %></div>
    </div>
  <% end %>
<% end %>
</div>